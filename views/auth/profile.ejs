<% if(isAuthenticated) { %>
    <% include ../layout/authheader %>
<% } else { %>
    <% include ../layout/header %>
<% } %>


<div class="box box-primary">
    <div class="box-header bg-primary">
        <h2 class="box-title">Profile</h2>
    </div>

    <h2>Existing Credit card</h2>
    <div class="form-group">
        <label class='control-label'>Type : </label> 
		<label class='checkbox' id="etype"><%= type %></label>
    </div>
     <div class="form-group">
        <label class='control-label'>Number : </label> 
		<label class='checkbox' id="enumber"><%=number %></label>
    </div>
     <div class="form-group">
        <label class='control-label'>Expire month : </label> 
  		<label class='checkbox' id="eexpire_month"><%=expire_month %></label>
    </div>
    <div class="form-group">
        <label class='control-label'>Expire year : </label> 
  		<label class='checkbox' id="eexpire_year"><%=expire_year %></label>
    </div>



<h2>Update Credit Card</h2>
    
    <form action='/auth/postprofile' method='post'>
        <div class="box-body">

            <div class="form-group">
                <label for="type">Type</label>
                <select class="select required form-control" name="type" id='type'>
		        <option value="visa">visa</option>
		        <option value="mastercard">mastercard</option>
		        <option value="discover">discover</option>
		        <option value="amex">amex</option>
	        	</select>
            </div>

            <div class="form-group">
                <label for="Number">Number</label>
                <input type="text" name="number" id="number" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="Cvv2">Cvv2</label>
                <input type="text" name="Cvv2" id="Cvv2" class="form-control" />
            </div>

            <div class="form-group">
                <label for="expire_month">Expire month</label>
                <select class="select required form-control" name="expire_month" id='expire_month'>
			        <option value="1">1</option>
			        <option value="2">2</option>
			        <option value="3">3</option>
			        <option value="4">4</option>
			        <option value="5">5</option>
			        <option value="6">6</option>
			        <option value="7">7</option>
			        <option value="8">8</option>
			        <option value="9">9</option>
			        <option value="10">10</option>
			        <option value="11">11</option>
			        <option value="12">12</option>
	        	</select>
            </div>


            <div class="form-group">
                <label for="expire_year">Expire year</label>
                <select class="select required form-control" name="expire_year" id='expire_year'>
		        	<option value="2013">2013</option>
			        <option value="2014">2014</option>
			        <option value="2015">2015</option>
			        <option value="2016">2016</option>
			        <option value="2017">2017</option>
			        <option value="2018">2018</option>
			        <option value="2019">2019</option>
			        <option value="2020">2020</option>
			        <option value="2021">2021</option>
			        <option value="2022">2022</option>
			        <option value="2023">2023</option>
	        	</select>
            </div>

            <div class="form-group">
                <label for="name">Phone</label>
                <input type="phone" name="phone" id="phone" value='<%= phone %>' class="form-control" />
            </div>

        </div>


        <div class="box-footer">
            <input class="btn btn-primary" name="commit" type="submit" value="Update" />
        </div>
    </form>
</div>





<% include ../layout/footer %>