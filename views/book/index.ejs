<script>
        
            sessionStorage.age = "all";
            sessionStorage.duration = "short";
            sessionStorage.sex = $('#sex').val();
            $('#duration').change(function () {
                var d = parseInt($('#duration').val());
                var duration = "short";
                if (d > 5) duration = "long";
                sessionStorage.duration = duration;
            });

            $('#sex').change(function () {
                sessionStorage.sex = $('#sex').val();
            });
