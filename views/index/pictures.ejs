<% include ../layout/customer_header %>

<aside class="right-side">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class='row-fluid'>
            <div class='table-responsive'>
            <a href='/picture' class='btn btn-primary'>
                <i class='glyphicon glyphicon-plus-sign'></i> Add
            </a>
                <table class="table table-striped table-bordered bootstrap-datatable datatable">
                    <thead>
                        <tr>
                            <th>Customer</th>
                            <th>Type</th>
                            <th>Image</th></tr>
                        </tr>
                    </thead>


                    <tbody>
                        <% for( var i = 0; i < pictures.length; i ++) { %>
                        <tr>
                            <td><%= pictures[i].email %></td>
                            <td><%= pictures[i].uploadType %></td>
                            <td><img width=200px height=200px src='/<%= pictures[i].path.replace('\\', '/').replace('\\', '/').replace('\\', '/').replace('public/', '')%> '/></td>
                        </tr>
                        <% } %>
                </table>
            </div>
        </div>

    </section><!-- /.content -->
</aside><!-- /.right-side -->
<% include ../layout/customer_footer %>